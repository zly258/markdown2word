{
  "manifest_version": 3,
  "name": "Markdown2Word Helper",
  "version": "1.1",
  "description": "专业的 Markdown 转文档工具。支持 DeepSeek/ChatGPT 内容一键转 Word/PPT。",
  "action": {
    "default_title": "打开 Markdown2Word",
    "default_icon": {
      "16": "vite.svg",
      "48": "vite.svg",
      "128": "vite.svg"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "vite.svg",
    "48": "vite.svg",
    "128": "vite.svg"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}